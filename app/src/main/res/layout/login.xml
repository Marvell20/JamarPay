<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LoginLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/LinearFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/blue"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="40dp"
                android:gravity="center_horizontal"
                app:srcCompat="@drawable/logo_jamar_white" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/group_3"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="¡Te damos la bienvenida!"
                android:textColor="@color/white"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:textSize="40dp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="30dp"
                android:text="A la App ORO de Jamar, donde podrás realizar tu autogestión."
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ellipse_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/LinearFont"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/lato"
                android:text="Primero, ingresa tu número de documento y \ndaremos el siguiente paso a verificar tu \nidentidad."
                android:textColor="@color/soft_gray"
                />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:text="Tipo de documento"
                android:textColor="@color/text"
                android:textSize="16sp" />
            <Spinner
                android:id="@+id/my_spinner"
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:contentDescription="Selecciona una opción"
                android:background="@drawable/spinner_border" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="163dp"
                android:layout_height="17dp"
                android:fontFamily="@font/lato"
                android:text="Número de documento"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="328dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:fontFamily="@font/lato"
                android:hint="Ingresa tu número de documento"
                android:inputType="textPersonName"
                android:textColor="@color/soft_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:gravity="center_horizontal|start"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/checkBox"
                    style="@style/MyCheckBoxStyle"
                    android:layout_width="32sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    />

                <TextView
                    android:id="@+id/checkBoxText"
                    android:textColor="@color/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_chbox" />
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                android:layout_width="328dp"
                android:layout_height="50dp"
                android:fontFamily="@font/lato"
                android:text="Verifica mi identidad"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:enabled="false"
                android:textAllCaps="false"
                android:allowClickWhenDisabled="false"
                android:textSize="20sp"
                app:cornerRadius="24dp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>