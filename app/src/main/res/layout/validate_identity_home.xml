<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="common.ValidateIdentityHome"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo_jamar_red" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_marginHorizontal="12dp"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ellipse_3" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/card_jamar" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:srcCompat="@drawable/mobile_phone_flatline_1" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="A continuación se realizará el proceso\n
de validación de identidad"
            android:textColor="@color/down_arrow"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            app:fontFamily="@font/geomanist_regular" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ValidateIdentity"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/black"
            android:text="Validar identidad"
            android:paddingVertical="10dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="24sp"
            app:fontFamily="@font/geomanist_regular" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>